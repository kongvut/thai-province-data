{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Province",
  "description": "จังหวัดของประเทศไทย",
  "type": "object",
  "properties": {
    "id": { "type": "integer", "description": "รหัสจังหวัด (Primary Key)" },
    "name_th": { "type": "string", "maxLength": 150, "description": "ชื่อจังหวัด (ภาษาไทย)" },
    "name_en": { "type": "string", "maxLength": 150, "description": "ชื่อจังหวัด (ภาษาอังกฤษ)" },
    "geography_id": { "type": "integer", "description": "FK → geographies.id" },
    "created_at": { "type": ["string", "null"], "format": "date-time" },
    "updated_at": { "type": ["string", "null"], "format": "date-time" },
    "deleted_at": { "type": ["string", "null"], "format": "date-time" }
  },
  "required": ["id", "name_th", "name_en", "geography_id"]
}
